{
  "manifest_version": 3,
  "name": "Meraki - Web Productivity Companion",
  "version": "1.0.0",
  "description": "Capture, organize, and act on information across the web with intelligent bookmarking, note-taking, and task management",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.googleapis.com/*",
    "https://*.firebaseio.com/*",
    "https://*.youtube.com/*",
    "https://*.amazon.com/*",
    "https://*.booking.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Meraki Panel",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}